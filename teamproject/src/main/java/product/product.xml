     <!-- 상품 목록 조회 --> <!--  부모카테고리 뺐음 -->
    <select id="list_product" resultType="product.ProductDTO">
        select productNum, productName, price, p_categoryNum, companyNum, productImage from product
    </select>

    <!-- 상품 상세 조회 --> <!-- 조인해야함 -->
    <select id="detail_product" resultType="product.ProductDTO">
        select * from product WHERE productNum = #{productNum}
    </select>

    <!-- 상품 상세 조회 (관리자) -->
    <!-- <select id="admin_detail_product" resultType="product.ProductDTO">
        SELECT productNum, productName, price, companyName, description, productImage, p_parentCategory, p.p_categoryNum, c.compantNum, comanyName 
        FROM product p, product_category pc, company c
        WHERE p.p_categoryNum = pc.p_categoryNum and p.comanyNum = c.companyNum and productNum = #{productNum}
    </select>  -->
    
    <!-- 상품 추가 -->
    <insert id="insert_product">
        INSERT INTO product 
        (productNum, productName, price, amount, companyName, description, productImage, p_categoryNum)
        VALUES
        (seq_product.nextval, #{productName}, #{price}, #{amount}, #{companyName}, 
         #{description}, #{productImage}, #{p_categoryNum})
    </insert>

    <!-- 상품 정보 수정 --> <!-- 업체는 뺐음(바뀔일이 없음) -->
    <update id="update_product">
        UPDATE product
        SET productName = #{productName},
            price = #{price},
            description = #{description},
            productImage = #{productImage},
            p_parentCategory = #{p_parentCategory},
            p_categoryNum = #{p_categoryNum}
        WHERE productNum = #{productNum}
    </update>

    <!-- 상품 삭제 -->
    <delete id="delete_product">
        delete from product where productNum = #{productNum}
    </delete>

    <!-- 파일 정보 조회 --> <!--  이건 왜 하는거지 ..? -->
    <select id="file_info" resultType="String">
        SELECT productImage
        FROM product
        WHERE productNum = #{productNum}
    </select>

    <!-- 업체 목록 조회 -->
    <select id="list_company" resultType="product.CompanyDTO">
        SELECT companyNum, companyName
        FROM company
    </select>

    <!-- 카테고리 목록 조회 -->
    <select id="list_category" resultType="product.CategoryDTO">
        select * from product_category
    </select>

