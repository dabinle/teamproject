<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>teamproject</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <!-- 관리자 -->
  <servlet>
  	<servlet-name>AdminController</servlet-name>
  	<servlet-class>shop.AdminController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AdminController</servlet-name>
  	<url-pattern>/admin_servlet/*</url-pattern>
  </servlet-mapping>
  <!-- 홈페이지 -->
  <servlet>
  	<servlet-name>HomeController</servlet-name>
  	<servlet-class>shop.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>HomeController</servlet-name>
  	<url-pattern>/home_servlet/*</url-pattern>
  </servlet-mapping>
  <!-- 상품 -->
  <servlet>
  	<servlet-name>ProductController</servlet-name>
  	<servlet-class>shop.ProductController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ProductController</servlet-name>
  	<url-pattern>/product_servlet/*</url-pattern>
  </servlet-mapping>
  <!-- 회원 -->
  <servlet>
  	<servlet-name>LoginController</servlet-name>
  	<servlet-class>shop.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginController</servlet-name>
  	<url-pattern>/login_servlet/*</url-pattern>
  </servlet-mapping>
</web-app>